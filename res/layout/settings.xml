<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/main_background" android:baselineAligned="true">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_settings_label"
            android:id="@+id/textView44" android:layout_gravity="left|center_vertical" android:paddingTop="30dp"
            android:textStyle="bold" android:textSize="20dp"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/input_size_label"
                  android:id="@+id/textView"
                  android:gravity="center_vertical|center_horizontal" android:layout_alignParentEnd="false"
                  android:layout_toLeftOf="@+id/inputSizeEdit"
                  android:layout_alignParentLeft="true"
                  android:layout_alignBottom="@+id/inputSizeEdit" android:layout_alignTop="@+id/inputSizeEdit"/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                  android:id="@+id/inputSizeEdit" android:layout_gravity="right|center_vertical"
                  android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:singleLine="true"
                  android:selectAllOnFocus="true" android:clickable="true" android:editable="true"
                  android:enabled="true" android:focusable="true" android:focusableInTouchMode="true"
                  android:inputType="number" android:numeric="integer"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dimension_label"
                  android:id="@+id/textView1" android:layout_toRightOf="@+id/inputSizeEdit"
                  android:layout_alignTop="@+id/inputSizeEdit" android:layout_alignBottom="@+id/inputSizeEdit"
                  android:gravity="center_vertical|center_horizontal"/>
    </RelativeLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sorting_settings_label"
            android:id="@+id/textView4" android:layout_gravity="left|center_vertical" android:paddingTop="30dp"
            android:textSize="20dp" android:textStyle="bold" android:textIsSelectable="true"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout1">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/buffer_size_label"
                  android:id="@+id/textView2" android:layout_alignParentLeft="true"
                  android:gravity="center_vertical|center_horizontal" android:layout_alignParentEnd="false"
                  android:layout_alignBottom="@+id/bufferSizeEdit" android:layout_alignTop="@+id/bufferSizeEdit"
                  android:layout_toLeftOf="@+id/bufferSizeEdit"/>
        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                  android:id="@+id/bufferSizeEdit" android:layout_gravity="right|center_vertical"
                  android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:singleLine="true"
                  android:selectAllOnFocus="true" android:clickable="true" android:editable="true"
                  android:enabled="true" android:focusable="true" android:focusableInTouchMode="true"
                  android:inputType="number" android:numeric="integer"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dimension_label"
                  android:id="@+id/textView3" android:layout_toRightOf="@+id/bufferSizeEdit"
                  android:layout_alignTop="@+id/bufferSizeEdit" android:layout_alignBottom="@+id/bufferSizeEdit"
                  android:gravity="center_vertical|center_horizontal"/>
    </RelativeLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validation_settings_label"
            android:id="@+id/textView6" android:layout_gravity="left|center_vertical" android:paddingTop="30dp"
            android:textSize="20dp" android:textStyle="bold"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/validationSelector" android:measureWithLargestChild="false">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_first_label"
                android:id="@+id/selectFirst" android:layout_gravity="left|center_vertical" android:checked="false"
                android:paddingRight="5dp" android:onClick="selectFirst"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_last_label"
                android:id="@+id/selectLast" android:layout_gravity="left|center_vertical" android:checked="false"
                android:paddingRight="5dp" android:onClick="selectLast"/>
        </RadioGroup>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="40">
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:id="@+id/relativeLayout2">
                <EditText android:layout_width="50dp" android:layout_height="wrap_content"
                          android:id="@+id/firstDepthEdit" android:layout_gravity="right|center_vertical"
                          android:singleLine="true" android:selectAllOnFocus="true"
                          android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                          android:editable="true" android:enabled="true" android:inputType="number"
                          android:numeric="integer"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/integers_label"
                          android:id="@+id/textView7" android:layout_toRightOf="@+id/firstDepthEdit"
                          android:layout_alignTop="@+id/firstDepthEdit" android:layout_alignBottom="@+id/firstDepthEdit"
                          android:gravity="center_vertical|center_horizontal"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:id="@+id/relativeLayout3">
                <EditText android:layout_width="50dp" android:layout_height="wrap_content"
                          android:id="@+id/lastDepthEdit" android:layout_gravity="right|center_vertical"
                          android:singleLine="true" android:selectAllOnFocus="true"
                          android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                          android:editable="true" android:enabled="true" android:inputType="number"
                          android:numeric="integer"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/integers_label" android:id="@+id/textView9"
                          android:gravity="center_vertical|center_horizontal"
                          android:layout_toRightOf="@+id/lastDepthEdit" android:layout_alignTop="@+id/lastDepthEdit"
                          android:layout_alignBottom="@+id/lastDepthEdit"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
</LinearLayout>